@model List<TravelPlan>
@{
    ViewData["Title"] = "List of current carpools";
}

<h1>@ViewData["Title"]</h1>
<p></p>

<div class="row">
    @foreach (var travelPlan in Model)
    {
        <div class="card mx-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@travelPlan.StartLocation - @travelPlan.EndLocation</h5>
                <h6 class="card-subtitle mb-2 text-muted">@travelPlan.StartDate - @travelPlan.EndDate</h6>
                <p class="card-text">
                    <ul class="list-group">
                        @foreach (var employee in travelPlan.SelectedEmployees)
                        {
                            <li class="list-group-item">@employee.Name</li>
                        }
                    </ul>
                </p>
                <a asp-controller="Home", asp-action="EditPassengers" asp-route-id="@travelPlan.Id">Edit passangers</a>
                <a asp-controller="Home", asp-action="EditTravelPlan" asp-route-id="@travelPlan.Id">Edit route</a>
                <a asp-controller="Home", asp-action="DeleteTravelPlan" asp-route-id="@travelPlan.Id">Delete</a>
            </div>
        </div>
    }
</div>



