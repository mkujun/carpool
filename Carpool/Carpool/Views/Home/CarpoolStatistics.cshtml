@model TravelPlanStatisticsViewModel
@{
    ViewData["Title"] = "CarpoolStatistics";
}

<h1>Carpool Statistics</h1>

<div class="form-group">
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-inline">
                <select class="form-control mb-2 col-md-4" asp-for="@Model.MonthId" id="selectedMonth" asp-items="@Model.Months"></select>
                <button type="button" id="selectMonth" class="btn btn-secondary mb-2 mx-2">Select month for statistics</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="travelPlans" style="display:none">
    @if(Model.TravelPlans != null)
    {
        @foreach (var travelPlan in Model.TravelPlans)
        {
            <div class="card mx-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Travel plan: @travelPlan.Id</h5>
                    <h5 class="card-subtitle">@travelPlan.StartLocation - @travelPlan.EndLocation</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@travelPlan.StartDate.ToShortDateString() - @travelPlan.EndDate.ToShortDateString()</h6>
                </div>
                <p class="card-text">

                </p>
            </div>

        }
    }
</div>

@section scripts {
    <script type="text/javascript">

        $("#selectMonth").click(function () {
            var monthId = $("#selectedMonth").val();

            var dataObject = {
                "MonthId": monthId
            };

            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: "/Home/CarpoolStatistics",
                data: JSON.stringify(dataObject),
                error: function (response) {
                },
                success: function (response) {
                    if (response.travelPlans.length < 0) {
                        //alert(response.error);
                        //$("#travelPlans").hide();
                        //console.log(response);
                    }
                    else {
                        // todo : show hidden card layout
                        $("#travelPlans").show();
                        console.log(response);
                    }
                }
            });
        })

    </script>
}

